# ========================================
# NuboLink API - Configuración de Entorno
# ========================================

# Servidor
PORT=3001
NODE_ENV=development
HOST=0.0.0.0

# Seguridad
JWT_SECRET=change-this-super-secret-jwt-key-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Base de Datos
DATABASE_PATH=./database/nubolink.sqlite
DATABASE_BACKUP_PATH=./backups/

# ========================================
# Mikrotik Servers Configuration
# ========================================

# España (ES) - Servidor Principal
MIKROTIK_ES_HOST=146.66.254.253
MIKROTIK_ES_PORT=22
MIKROTIK_ES_USER=api-user
MIKROTIK_ES_PASS=your-secure-password
MIKROTIK_ES_WG_INTERFACE=wg-nuboprotect-es
MIKROTIK_ES_CLIENT_POOL=10.0.0.0/24

# Estados Unidos (US)
MIKROTIK_US_HOST=146.66.254.254
MIKROTIK_US_PORT=22
MIKROTIK_US_USER=api-user
MIKROTIK_US_PASS=your-secure-password
MIKROTIK_US_WG_INTERFACE=wg-nuboprotect-us
MIKROTIK_US_CLIENT_POOL=10.1.0.0/24

# Reino Unido (GB)
MIKROTIK_GB_HOST=146.66.254.255
MIKROTIK_GB_PORT=22
MIKROTIK_GB_USER=api-user
MIKROTIK_GB_PASS=your-secure-password
MIKROTIK_GB_WG_INTERFACE=wg-nuboprotect-gb
MIKROTIK_GB_CLIENT_POOL=10.2.0.0/24

# Francia (FR)
MIKROTIK_FR_HOST=146.66.254.251
MIKROTIK_FR_PORT=22
MIKROTIK_FR_USER=api-user
MIKROTIK_FR_PASS=your-secure-password
MIKROTIK_FR_WG_INTERFACE=wg-nuboprotect-fr
MIKROTIK_FR_CLIENT_POOL=10.3.0.0/24

# Alemania (DE)
MIKROTIK_DE_HOST=146.66.254.250
MIKROTIK_DE_PORT=22
MIKROTIK_DE_USER=api-user
MIKROTIK_DE_PASS=your-secure-password
MIKROTIK_DE_WG_INTERFACE=wg-nuboprotect-de
MIKROTIK_DE_CLIENT_POOL=10.4.0.0/24

# ========================================
# DNS Configuration
# ========================================

# DNS Primarios (Tus servidores)
DNS_PRIMARY=146.66.254.253
DNS_SECONDARY=146.66.254.252

# DNS Backup (Cloudflare/Google)
DNS_BACKUP_1=1.1.1.1
DNS_BACKUP_2=1.0.0.1
DNS_BACKUP_3=8.8.8.8
DNS_BACKUP_4=8.8.4.4

# ========================================
# WireGuard Configuration
# ========================================

# WireGuard Settings
WG_PORT=51820
WG_KEY_LENGTH=32
WG_KEEP_ALIVE=25
WG_MTU=1420

# Client IP Ranges
WG_CLIENT_IP_START=10.0.0.10
WG_CLIENT_IP_END=10.0.0.254

# ========================================
# API Rate Limiting
# ========================================

# Rate Limits (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# ========================================
# Logging Configuration
# ========================================

# Log Settings
LOG_LEVEL=info
LOG_FILE=./logs/nubolink-api.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# ========================================
# Email Configuration (Opcional)
# ========================================

# SMTP Settings for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Templates
EMAIL_FROM=noreply@nubolink.com
EMAIL_SUPPORT=support@nubolink.com

# ========================================
# External Services (Opcional)
# ========================================

# Analytics
ANALYTICS_ENABLED=false
ANALYTICS_API_KEY=your-analytics-key

# Monitoring
MONITORING_ENABLED=false
MONITORING_WEBHOOK=https://your-monitoring-service.com/webhook

# Backup Service
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# ========================================
# Development Settings
# ========================================

# Debug Settings (solo development)
DEBUG_ENABLED=true
DEBUG_SQL=false
DEBUG_SSH=false

# CORS Settings
CORS_ORIGIN=http://localhost:3000,https://nubolink.com
CORS_CREDENTIALS=true

# ========================================
# Production Settings
# ========================================

# SSL/TLS (production)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/letsencrypt/live/api.nubolink.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/api.nubolink.com/privkey.pem

# Reverse Proxy (Nginx)
BEHIND_PROXY=false
TRUST_PROXY=true

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# ========================================
# Performance Settings
# ========================================

# Connection Pools
DB_POOL_SIZE=10
SSH_POOL_SIZE=5
SSH_TIMEOUT_MS=30000

# Cache Settings
CACHE_ENABLED=false
CACHE_TTL_SECONDS=300

# ========================================
# Security Headers
# ========================================

# Helmet.js Configuration
SECURITY_HSTS_ENABLED=true
SECURITY_NOSNIFF_ENABLED=true
SECURITY_XSS_PROTECTION=true
