{
  "name": "nubolink-api",
  "version": "1.0.0",
  "description": "NuboLink VPN API Server - WireGuard + Mikrotik integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "setup": "node scripts/setup.js",
    "migrate": "node scripts/migrate.js",
    "backup": "bash scripts/backup.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "vpn",
    "wireguard", 
    "mikrotik",
    "api",
    "dns",
    "security",
    "nubolink"
  ],
  "author": "NuboLink Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nubolink-api.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/nubolink-api/issues"
  },
  "homepage": "https://github.com/yourusername/nubolink-api#readme",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "cors": "^2.8.5",
    "ssh2": "^1.13.0",
    "sqlite3": "^5.1.6",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "joi": "^17.9.2",
    "dotenv": "^16.1.4",
    "winston": "^3.9.0",
    "node-cron": "^3.0.2",
    "crypto": "^1.0.1",
    "uuid": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!tests/**"
    ]
  }
}